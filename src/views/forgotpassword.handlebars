<div class="container-login">
  {{#if error}}
  <p>{{error}}</p>
  {{/if}}
  <form class="form-login" action="/api/sessions/recover" method="post">
    <div id="mensaje"></div>
    <input type="email" name="email" placeholder="email" id="email" />
    <input class="submit" type="submit" value="Send recovery email" id="submit" />
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>